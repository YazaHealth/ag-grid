---
import ShowcaseLayout from '@components/showcase/ShowcaseLayout.astro';
import styles from './example.module.scss';
import { Icon } from '@ag-website-shared/components/icon/Icon';
import { urlWithBaseUrl } from '@utils/urlWithBaseUrl';
import { PortfolioPositions } from '@components/showcase/examples/portfolio-positions';
---

<ShowcaseLayout title="Portfolio Positions">
    <div class={styles.topHeader}>
        <div>
            <h1 class={styles.headerHeading}>Finance</h1>
            <p class={styles.headerDescription}>
                An example of a finance app with integrated charts and live-updating data
            </p>
            <button class="button-secondary">
                <Icon alt={`GitHub logo`} name="github" svgClasses={styles.githubIcon} />
                <span>See on Github</span>
            </button>
        </div>

        <div class={styles.tabs}>
            <div class={styles.tabWrapper}>
                <a href={urlWithBaseUrl('/example')}>
                    <img
                        class={styles.showcaseItemTab}
                        src={urlWithBaseUrl(`/example/grid-inventory.png`)}
                        alt="Grid illustration"
                    />
                </a>
            </div>
            <div class={`${styles.tabWrapper} ${styles.tabActive}`}>
                <a href={urlWithBaseUrl('/example-finance')}>
                    <img
                        class={`${styles.showcaseItemTab}`}
                        src={urlWithBaseUrl(`/example/finance-grid.png`)}
                        alt="Grid illustration"
                    />
                </a>
            </div>
            <div class={styles.tabWrapper}>
                <a href={urlWithBaseUrl('/example-crm')}>
                    <img
                        class={styles.showcaseItemTab}
                        src={urlWithBaseUrl(`/example/crm-grid.png`)}
                        alt="Grid illustration"
                    />
                    <div>CRM</div>
                </a>
            </div>
            <div class={styles.tabWrapper}>
                <a href={urlWithBaseUrl('/example-complete')}>
                    <img
                        class={styles.showcaseItemTab}
                        src={urlWithBaseUrl(`/example/grid-full.png`)}
                        alt="Grid illustration"
                    />
                </a>
            </div>
        </div>
    </div>
    <div class={styles.layout}>
        <div class={styles.layoutWrapper}>
            <PortfolioPositions client:only="react" />
        </div>
    </div>
</ShowcaseLayout>
